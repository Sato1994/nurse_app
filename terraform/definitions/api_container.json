[
  {
    "name": "api_container",
    "image": "850929304034.dkr.ecr.ap-northeast-1.amazonaws.com/api:latest",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "api",
        "awslogs-group": "/ecs/api"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 3000
      }
    ],
    "environment": [
      {
        "name": "HOST",
        "value": "0.0.0.0"
      },
      {
        "name": "PORT",
        "value": "3000"
      },
      {
        "name": "RAILS_ENV",
        "value": "production"
      }
    ],
    "secrets": [
      {
        "name": "API_DOMAIN",
        "valueFrom": "API_DOMAIN"
      },
      {
        "name": "DATABASE_URL",
        "valueFrom": "DATABASE_URL"
      },
      {
        "name": "RAILS_MASTER_KEY",
        "valueFrom": "RAILS_MASTER_KEY"
      },
      {
        "name": "AWS_ACCESS_KEY_ID",
        "valueFrom": "ACCESS_KEY_ID"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "valueFrom": "SECRET_ACCESS_KEY"
      },
      {
        "name": "AWS_DEFAULT_REGION",
        "valueFrom": "DEFAULT_REGION"
      },
      {
        "name": "MAPS_API_KEY",
        "valueFrom": "MAPS_API_KEY"
      }
    ],
    "command": [
      "bundle",
      "exec",
      "rails",
      "s",
      "-b",
      "0.0.0.0",
      "-p",
      "3000"
    ]
  },
  {
    "name": "api_db_migrate_container",
    "image": "850929304034.dkr.ecr.ap-northeast-1.amazonaws.com/api:latest",
    "essential": false,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "api",
        "awslogs-group": "/ecs/api/db_migrate"
      }
    },
    "environment": [
      {
        "name": "HOST",
        "value": "0.0.0.0"
      },
      {
        "name": "PORT",
        "value": "3000"
      },
      {
        "name": "RAILS_ENV",
        "value": "production"
      }
    ],
    "secrets": [
      {
        "name": "API_DOMAIN",
        "valueFrom": "API_DOMAIN"
      },
      {
        "name": "DATABASE_URL",
        "valueFrom": "DATABASE_URL"
      },
      {
        "name": "RAILS_MASTER_KEY",
        "valueFrom": "RAILS_MASTER_KEY"
      }
    ],
    "command": [
      "bundle",
      "exec",
      "rails",
      "db:migrate"
    ]
  },
  {
    "name": "api_db_seed",
    "image": "850929304034.dkr.ecr.ap-northeast-1.amazonaws.com/api:latest",
    "essential": false,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "api",
        "awslogs-group": "/ecs/api/db_seed"
      }
    },
    "environment": [
      {
        "name": "HOST",
        "value": "0.0.0.0"
      },
      {
        "name": "PORT",
        "value": "3000"
      },
      {
        "name": "RAILS_ENV",
        "value": "production"
      }
    ],
    "secrets": [
      {
        "name": "API_DOMAIN",
        "valueFrom": "API_DOMAIN"
      },
      {
        "name": "DATABASE_URL",
        "valueFrom": "DATABASE_URL"
      },
      {
        "name": "RAILS_MASTER_KEY",
        "valueFrom": "RAILS_MASTER_KEY"
      }
    ],
    "command": [
      "rails",
      "db:seed"
    ]
  }
]