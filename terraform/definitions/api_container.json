[
  {
    "name": "api_container",
    "image": "850929304034.dkr.ecr.ap-northeast-1.amazonaws.com/api:latest",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "api",
        "awslogs-group": "/ecs/api"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl http://localhost:3000 || exit 1"
      ],
      "interval": 5,
      "retries": 3,
      "startPeriod": 60,
      "timeout": 5
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 3000
      }
    ],
    "environment": [
      {
        "name": "HOST",
        "value": "0.0.0.0"
      },
      {
        "name": "PORT",
        "value": "3000"
      },
      {
        "name": "RAILS_ENV",
        "value": "production"
      }
    ],
    "secrets": [
      {
        "name": "API_DOMAIN",
        "valueFrom": "API_DOMAIN"
      },
      {
        "name": "DATABASE_URL",
        "valueFrom": "DATABASE_URL"
      },
      {
        "name": "RAILS_MASTER_KEY",
        "valueFrom": "RAILS_MASTER_KEY"
      }
    ],
    "command": [
      "bundle",
      "exec",
      "rails",
      "s",
      "-b",
      "0.0.0.0",
      "-p",
      "3000"
    ]
  }
]